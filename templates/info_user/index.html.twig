{% extends 'base.html.twig' %}

{% block title %}InfoUser index{% endblock %}

{% block body %}
    <h1>InfoUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>PhoneNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for info_user in info_users %}
            <tr>
                <td>{{ info_user.id }}</td>
                <td>{{ info_user.firstName }}</td>
                <td>{{ info_user.lastName }}</td>
                <td>{{ info_user.phoneNumber }}</td>
                <td>
                    <a href="{{ path('app_info_user_show', {'id': info_user.id}) }}">show</a>
                    <a href="{{ path('app_info_user_edit', {'id': info_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_info_user_new') }}">Create new</a>
{% endblock %}
