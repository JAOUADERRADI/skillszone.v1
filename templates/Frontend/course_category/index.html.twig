{% extends 'base.html.twig' %}

{% block title %}CourseCategory index{% endblock %}

{% block body %}
    <h1>CourseCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course_category in course_categories %}
            <tr>
                <td>{{ course_category.id }}</td>
                <td>{{ course_category.name }}</td>
                <td>{{ course_category.createdAt ? course_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ course_category.updatedAt ? course_category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_course_category_show', {'id': course_category.id}) }}">show</a>
                    <a href="{{ path('app_course_category_edit', {'id': course_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_category_new') }}">Create new</a>
{% endblock %}
